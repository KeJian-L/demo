<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.mapper.TableMapper">

    <update id="createTable" parameterType="com.example.entity.Table">
        create table ${table.databaseName}.${table.name} (
          id int NOT NULL AUTO_INCREMENT PRIMARY KEY,
        <foreach item="column" collection="table.columns" index="index" separator=",">
              ${column.name} ${column.type}(${column.length}) default #{column.defaultValue,jdbcType=VARCHAR}
              <if test="column.notNull">
                  not null
              </if>
              comment #{column.comment,jdbcType=VARCHAR}
          </foreach>
        );
    </update>
</mapper>